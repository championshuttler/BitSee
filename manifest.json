{
    "manifest_version": 2,
    "name": "BitSee",
    "version": "1.0",

    "description": "Allows you to quickly see the balance of Bitcoin addresses on any web pages",

    "web_accessible_resources": [
        "icons/logo32.png"
    ],

    "icons": {
        "32": "icons/logo32.png",
        "48": "icons/logo48x48.png",
        "128": "icons/logo128x128.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "run_at": "document_end"
    }]
}